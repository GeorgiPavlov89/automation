<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap10="http://schemas.microsoft.com/appx/manifest/uap/windows10/10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap uap10 rescap">

  <Identity Name="MyAutomation" Publisher="CN=MyCompany" Version="1.0.2.0" ProcessorArchitecture="x64" />

  <Properties>
    <DisplayName>MyAutomation</DisplayName>
    <PublisherDisplayName>MyAutomation</PublisherDisplayName>
    <Description>None</Description>
    <Logo>Assets\StoreLogo.png</Logo>
    <uap10:PackageIntegrity>
      <uap10:Content Enforcement="on" />
    </uap10:PackageIntegrity>
  </Properties>

  <Resources>
    <Resource Language="en-us" />
  </Resources>

  <Dependencies>
    <TargetDeviceFamily Name="MSIXCore.Desktop" MinVersion="10.0.10240.0" MaxVersionTested="10.0.22000.1" />
    <TargetDeviceFamily Name="Windows.Desktop"   MinVersion="10.0.17763.0" MaxVersionTested="10.0.22000.1" />
  </Dependencies>

  <!-- ВХОДНАТА ТОЧКА КЪМ Control.exe -->
  <Applications>
    <Application Id="Control"
                 Executable="Control.exe"
                 EntryPoint="windows.fullTrustApplication">
      <uap:VisualElements
        DisplayName="MyAutomation"
        Description="Automation Control"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png"/>
    </Application>
  </Applications>

  <!-- Full trust за Win32 EXE -->
  <Capabilities>
    <rescap:Capability Name="runFullTrust"/>
  </Capabilities>
</Package>
